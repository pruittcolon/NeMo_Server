# ==========================================
# NEMO SERVER CONFIGURATION
# ==========================================

# Server Settings
HOST=0.0.0.0
PORT=8000

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-here-change-in-production
DB_ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_PATH=./instance/memories.db
FAISS_INDEX_PATH=./instance/faiss_index.bin

# ==========================================
# MODEL PATHS
# ==========================================
# Path to Gemma GGUF model file
GEMMA_MODEL_PATH=./models/gemma-3-4b-it-UD-Q4_K_XL.gguf

# Path to NeMo Parakeet ASR model
ASR_MODEL_PATH=./models/parakeet-tdt-0.6b-v2.nemo

# HuggingFace cache directory
HF_HOME=./models/hf_home

# ==========================================
# GPU CONFIGURATION
# ==========================================
# Number of GPU layers for Gemma (-1 = all layers, 0 = CPU only)
GEMMA_GPU_LAYERS=-1

# Use GPU for ASR transcription (true/false)
ASR_USE_GPU=true

# ==========================================
# FLUTTER APP WHITELIST
# ==========================================
# Comma-separated list of IP addresses allowed to access /transcribe without auth
# Default: localhost only for security
# Example: 192.168.1.100,192.168.1.101,127.0.0.1
FLUTTER_WHITELIST=127.0.0.1,::1

# ==========================================
# RATE LIMITING
# ==========================================
# Maximum requests per minute per IP address
RATE_LIMIT_PER_MINUTE=100

# ==========================================
# AUTHENTICATION
# ==========================================
# Session expiry time in seconds (default: 24 hours)
SESSION_EXPIRY=86400

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=./logs/server.log

# ==========================================
# TRANSCRIPTION SETTINGS
# ==========================================
# Audio chunk size in seconds for transcription
WHISPER_CHUNK_SECS=30

# Speaker diarization confidence threshold
ENROLL_MATCH_THRESHOLD=0.60
SECONDARY_CONFIDENCE_THRESHOLD=0.65

# ==========================================
# INSTANCE DIRECTORIES
# ==========================================
INSTANCE_DIR=./instance
MODELS_ROOT=./models
LOGS_DIR=./logs
