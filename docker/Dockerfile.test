FROM nvidia/cuda:12.6.2-cudnn-runtime-ubuntu24.04

# MINIMAL TEST: Just Python 3.10 + wheel
RUN apt-get update && apt-get install -y \
    software-properties-common \
    && add-apt-repository ppa:deadsnakes/ppa -y \
    && apt-get update && apt-get install -y \
    python3.10 \
    python3.10-dev \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Set Python 3.10 as default
RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.10 1

WORKDIR /app

# TEST: Copy and install ONLY the wheel
COPY llama_cpp_python-*.whl /tmp/
RUN python3 -m pip install --no-cache-dir /tmp/llama_cpp_python-*.whl --break-system-packages

# VERIFY: Test import
RUN python3 -c "import llama_cpp; print(f'✅ llama-cpp-python {llama_cpp.__version__}')" && \
    python3 -c "import sys; print(f'✅ Python {sys.version}')" && \
    python3 -c "from llama_cpp import Llama; print('✅ Llama class available')"

CMD ["python3", "-c", "import llama_cpp; print('SUCCESS!')"]



